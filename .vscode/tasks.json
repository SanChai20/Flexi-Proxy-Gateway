{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create Virtual Environment",
      "type": "shell",
      "linux": {
        "command": "python3 -m venv .venv"
      },
      "group": "none"
    },
    {
      "label": "Install Dependencies by requirements-*.txt",
      "type": "shell",
      "linux": {
        "command": ".venv/bin/pip3 install -r requirements.txt"
      },
      "group": "none"
    },
    {
      "label": "Sync Dependencies to requirements-*.txt",
      "type": "shell",
      "linux": {
        "command": ".venv/bin/pip3 freeze > requirements.txt"
      },
      "group": "none"
    },
    {
      "label": "Generate Key Pair",
      "type": "shell",
      "linux": {
        "command": ".venv/bin/python3"
      },
      "args": ["admin/create_key_pair.py"],
      "group": "none",
      "hide": false
    }
  ]
}
